<div class="container mx-auto max-w-2xl mt-10">
  <h1 class="text-3xl font-bold text-blue-600 mb-4"><%= @post.title %></h1>
  <p class="text-gray-800 text-lg"><%= simple_format(@post.body) %></p>

  <div class="mt-6 flex gap-4">
    <%= link_to "✏️ تعديل", edit_post_path(@post), class: "bg-yellow-400 text-white px-4 py-2 rounded hover:bg-yellow-500" %>
    <%= link_to "🗑️ حذف", post_path(@post), method: :delete, data: { confirm: "هل أنت متأكد من الحذف؟" }, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
    <%= link_to "↩️ رجوع", posts_path, class: "bg-gray-300 text-black px-4 py-2 rounded hover:bg-gray-400" %>
  </div>
</div>
