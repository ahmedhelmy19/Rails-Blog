<div class="container mx-auto max-w-2xl mt-10">
  <h1 class="text-3xl font-bold mb-6 text-center text-blue-600">📚 كل التدوينات</h1>

  <div class="text-right mb-4">
    <%= link_to "➕ تدوينة جديدة", new_post_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>

  <% @posts.each do |post| %>
    <div class="bg-white shadow-md rounded p-4 mb-4">
      <h2 class="text-xl font-semibold text-gray-800"><%= post.title %></h2>
      <p class="text-gray-600 mt-2"><%= truncate(post.body, length: 100) %></p>
      <div class="mt-4 flex gap-2">
        <%= link_to "📖 عرض", post_path(post), class: "text-blue-600 hover:underline" %>
        <%= link_to "✏️ تعديل", edit_post_path(post), class: "text-yellow-600 hover:underline" %>
        <%= button_to "🗑️ حذف", post_path(post), method: :delete, data: { confirm: "هل أنت متأكد؟" }, class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
